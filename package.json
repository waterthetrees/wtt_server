{
  "name": "waterthetrees.com",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "14.10.1"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fast-csv": "^4.3.1",
    "font-awesome": "^4.7.0",
    "fs": "^0.0.1-security",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "mapbox-gl": "^1.10.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.4",
    "pg": "^8.1.0",
    "pg-promise": "^10.6.1",
    "pgtools": "^0.3.0",
    "validator": "^11.1.0",
    "winston": "^3.2.1",
    "yargs-parser": "^18.1.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^6.2.2",
    "null-loader": "^0.1.1",
    "puppeteer": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add --force"
    ],
    "*.{json,graphql}": [
      "prettier --write",
      "git add --force"
    ],
    "*.{css,less,scss,sss}": [
      "stylelint --fix",
      "git add --force"
    ]
  },
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "*.test.ts",
      "db/*"
    ],
    "delay": "2"
  },
  "scripts": {
    "serve": "node server/server-api.js local",
    "start": "nodemon server/server-api.js local",
    "test": "mocha --timeout=90000 ./test/react-tests.js"
  }
}
