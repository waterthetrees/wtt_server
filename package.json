{
  "name": "waterthetrees.com",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "16.11.1"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "logform": "^2.2.0",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.12",
    "pg-promise": "^10.6.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "^24.4.0",
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "nock": "^13.1.1",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add --force"
    ],
    "*.{json,graphql}": [
      "prettier --write",
      "git add --force"
    ],
    "*.{css,less,scss,sss}": [
      "stylelint --fix",
      "git add --force"
    ]
  },
  "nodemonConfig": {
    "ext": "js",
    "ignore": [
      "*.test.ts",
      "db/*"
    ],
    "delay": "2"
  },
  "scripts": {
    "start": "nodemon server/index.js",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "lint": "eslint --ignore-path .gitignore ."
  }
}
